static void Main(string[] args) { 

            int a, b, x;
            string parametro= Console.ReadLine();
            string[] numeros=parametro.Split(' ');
            
            a = Convert.ToInt32(numeros[0]);
            b = Convert.ToInt32(numeros[1]);

            x = a+b ; //complete o código de acordo com o cálculo esperado

            Console.WriteLine("X = {0}", x);

         }
